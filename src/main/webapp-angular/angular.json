{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "./",
  "projects": {
    "library": {
      "projectType": "library",
      "root": "./library",
      "sourceRoot": "./library/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "./library/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "./library/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "./library/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "./library/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "library-web-components": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "./library-web-components",
      "sourceRoot": "./library-web-components/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser-esbuild",
          "options": {
            "preserveSymlinks": true,
            "namedChunks": true,
            "outputPath": "dist/library-web-components",
            "index": "./library-web-components/src/index.html",
            "main": "./library-web-components/src/index.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "./library-web-components/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "./library-web-components/src/favicon.ico",
              "./library-web-components/src/assets"
            ],
            "styles": ["./library-web-components/src/styles.scss"],
            "scripts": [
              {
                "input": "./postbuild-bundler.js",
                "bundleName": "bundle",
                "inject": true
              }
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "300kb",
                  "maximumError": "1mb"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "library-web-components:build:production"
            },
            "development": {
              "buildTarget": "library-web-components:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "library-web-components:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "./library-web-components/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "./library-web-components/src/favicon.ico",
              "./library-web-components/src/assets"
            ],
            "styles": ["./library-web-components/src/styles.scss"],
            "scripts": []
          }
        }
      }
    },
    "dev-shell": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "./dev-shell",
      "sourceRoot": "./dev-shell/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "preserveSymlinks": true,
            "outputPath": "dist/dev-shell",
            "index": "./dev-shell/src/index.html",
            "browser": "./dev-shell/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "./dev-shell/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "./dev-shell/src/favicon.ico",
              "./dev-shell/src/assets",
              {
                "glob": "**/*",
                "input": "../resources/static/dpfi/assets/translations",
                "output": "/wm/dpfi/assets/translations"
              },
              {
                "glob": "**/*",
                "input": "node_modules/ng2-pdfjs-viewer/pdfjs",
                "output": "/wm/dpfi/assets/pdfjs"
              }
            ],
            "styles": [
              "node_modules/primeng/resources/themes/lara-light-blue/theme.css",
              "node_modules/primeng/resources/primeng.min.css",
              "node_modules/primeflex/primeflex.css",
              "node_modules/primeicons/primeicons.css",
              "./dev-shell/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "optimization": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "options": {
            "proxyConfig": "./proxy.config.mjs"
          },
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "dev-shell:build:production"
            },
            "development": {
              "buildTarget": "dev-shell:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "dev-shell:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "./dev-shell/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": ["./dev-shell/src/favicon.ico", "./dev-shell/src/assets"],
            "styles": ["./dev-shell/src/styles.scss"],
            "scripts": []
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
